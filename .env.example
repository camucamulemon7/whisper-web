# Whisper Configuration
WHISPER_MODEL=large-v3
WHISPER_DEVICE=cuda
WHISPER_COMPUTE_TYPE=float16

# WhisperX Configuration
WHISPERX_BATCH_SIZE=16

# LLM Configuration for Summarization
# OpenAI API or compatible services
LLM_API_KEY=your-api-key-here
LLM_MODEL=gpt-4
LLM_BASE_URL=https://api.openai.com/v1

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration
VITE_WS_URL=ws://localhost:8000/ws/stt
VITE_API_URL=http://localhost:8000

# GPU Configuration
TORCH_CUDA_ARCH_LIST=7.0;7.5;8.0;8.6;8.9;9.0+PTX
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility
CUDA_MODULE_LOADING=LAZY

# Whisper Parameters (optimized for preventing duplicates)
WHISPER_BEAM_SIZE=5
WHISPER_BEST_OF=5
WHISPER_PATIENCE=1.0
WHISPER_LENGTH_PENALTY=1.0
WHISPER_REPETITION_PENALTY=1.1
WHISPER_NO_REPEAT_NGRAM_SIZE=0
WHISPER_TEMPERATURE=0.0
WHISPER_COMPRESSION_RATIO_THRESHOLD=2.4
WHISPER_LOG_PROB_THRESHOLD=-1.0
WHISPER_NO_SPEECH_THRESHOLD=0.6
WHISPER_CONDITION_ON_PREVIOUS_TEXT=false
WHISPER_PROMPT=
WHISPER_PREFIX=
WHISPER_SUPPRESS_BLANK=true
WHISPER_SUPPRESS_TOKENS=-1
WHISPER_WITHOUT_TIMESTAMPS=false
WHISPER_MAX_INITIAL_TIMESTAMP=1.0
WHISPER_WORD_TIMESTAMPS=false
# Whisper VAD (Voice Activity Detection) Parameters
# These help prevent duplicate transcriptions
WHISPER_VAD_FILTER=true
WHISPER_VAD_MIN_SPEECH_DURATION_MS=500  # Minimum speech duration for 10s chunks
# Max speech duration in seconds
WHISPER_VAD_MAX_SPEECH_DURATION_S=30
WHISPER_VAD_MIN_SILENCE_DURATION_MS=2000  # Longer silence for 10s chunks
WHISPER_VAD_SPEECH_PAD_MS=500
# faster-whisper 1.1.1 new features
WHISPER_VAD_THRESHOLD=0.5  # VAD threshold (0.0-1.0)
WHISPER_USE_SILERO_VAD=true  # Use Silero VAD for better accuracy
